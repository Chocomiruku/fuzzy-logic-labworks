<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChartFragment">


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toTopOf="@id/guideline_top">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/linguistic_variables_chart_text"
                style="@style/label_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/linguistic_variables"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/linguistic_variables_chart"
                android:layout_width="0dp"
                android:layout_height="@dimen/chart_height"
                android:layout_marginTop="@dimen/outer_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linguistic_variables_chart_text" />

            <Button
                android:id="@+id/add_linguistic_variable_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/add_set"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linguistic_variables_chart" />


            <TextView
                android:id="@+id/base_data_label"
                style="@style/label_header2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/base_data_label"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/add_linguistic_variable_btn" />

            <TextView
                android:id="@+id/base_data"
                style="@style/label_default"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/outer_margin"
                android:justificationMode="inter_word"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/base_data_label"
                tools:text="@string/fuzzy_time_series_values" />

            <TextView
                android:id="@+id/add_fuzzy_time_series_values_label"
                style="@style/label_header2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/add_fuzzy_time_series_value"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/base_data" />

            <TextView
                android:id="@+id/fuzzy_time_series_value_text"
                style="@style/label_header2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/fuzzy_time_series_value"
                app:layout_constraintEnd_toStartOf="@id/fuzzy_time_series_value_edit"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/add_fuzzy_time_series_values_label" />

            <EditText
                android:id="@+id/fuzzy_time_series_value_edit"
                style="@style/label_default"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/outer_margin"
                android:imeOptions="actionDone"
                android:inputType="number"
                app:layout_constraintBaseline_toBaselineOf="@id/fuzzy_time_series_value_text"
                app:layout_constraintEnd_toStartOf="@id/add_btn"
                app:layout_constraintStart_toEndOf="@id/fuzzy_time_series_value_text" />

            <ImageButton
                android:id="@+id/add_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/outer_margin"
                android:backgroundTint="@color/green_200"
                app:layout_constraintBottom_toBottomOf="@id/fuzzy_time_series_value_edit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/fuzzy_time_series_value_edit"
                app:srcCompat="@drawable/ic_baseline_check_24" />

            <TextView
                android:id="@+id/crisp_values_chart_text"
                style="@style/label_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/crisp_values_chart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fuzzy_time_series_value_edit" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/crisp_values_chart"
                android:layout_width="0dp"
                android:layout_height="@dimen/chart_height"
                android:layout_marginTop="@dimen/outer_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/crisp_values_chart_text"
                app:layout_constraintVertical_bias="0" />

            <TextView
                android:id="@+id/fuzzy_values_chart_text"
                style="@style/label_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/fuzzy_values_chart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/crisp_values_chart" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/fuzzy_values_chart"
                android:layout_width="0dp"
                android:layout_height="@dimen/chart_height"
                android:layout_marginTop="@dimen/outer_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fuzzy_values_chart_text"
                app:layout_constraintVertical_bias="0" />

            <TextView
                android:id="@+id/trends_chart_text"
                style="@style/label_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/trends_chart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fuzzy_values_chart" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/trends_chart"
                android:layout_width="0dp"
                android:layout_height="@dimen/chart_height"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/trends_chart_text" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/algorithm_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/trends_chart"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/SONG_model_label"
                    style="@style/label_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/song_model"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/current_step_label"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="16dp"
                    style="@style/label_header"
                    android:textColor="@color/violet_500"
                    tools:text="@string/current_step"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/SONG_model_label"/>

                <TextView
                    android:id="@+id/step_info_text"
                    android:layout_width="0dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginStart="16dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    style="@style/label_header2"
                    app:layout_constraintTop_toBottomOf="@id/current_step_label"
                    tools:text="@string/algorithm_step_info"
                    />

                <TextView
                    android:id="@+id/step_data_text"
                    android:layout_width="0dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="24dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    style="@style/label_default"
                    app:layout_constraintTop_toBottomOf="@id/step_info_text"
                    tools:text="@string/algorithm_data"
                    />

                <ImageButton
                    android:id="@+id/next_step_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="@dimen/outer_margin"
                    android:layout_marginTop="6dp"
                    app:layout_constraintTop_toBottomOf="@id/step_data_text"
                    android:backgroundTint="@color/green_200"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:srcCompat="@drawable/ic_baseline_arrow_forward_24" />

                <TextView
                    android:id="@+id/prediction_chart_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    tools:visibility="visible"
                    app:layout_constraintTop_toBottomOf="@id/step_data_text"
                    android:layout_marginTop="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    style="@style/label_header"
                    android:text="@string/prediction_chart"
                    />

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/prediction_chart"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/chart_height"
                    android:layout_marginTop="@dimen/outer_margin"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/prediction_chart_label"
                    tools:visibility="visible" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/predict_btn"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/outer_margin"
                android:text="@string/predict"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/algorithm_layout" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/outer_margin" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>