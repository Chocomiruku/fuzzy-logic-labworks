<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChartFragment">

    <TextView
        android:id="@+id/fuzzy_sets_chart_text"
        style="@style/label_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fuzzy_sets_charts"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toTopOf="@id/guideline_top" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/fuzzy_sets_chart"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginTop="@dimen/outer_margin"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toBottomOf="@id/fuzzy_sets_chart_text"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/base_points_text"
        style="@style/label_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/outer_margin"
        android:text="@string/base_points"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toBottomOf="@id/fuzzy_sets_chart"
        tools:visibility="visible" />

    <ScrollView
        android:id="@+id/base_points_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toBottomOf="@id/base_points_text">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:id="@+id/table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible">

                <TableRow android:background="@color/violet_500">

                    <TextView
                        style="@style/label_header2"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:width="0dp"
                        android:gravity="center_horizontal"
                        android:padding="10dp"
                        android:text="@string/title"
                        android:textColor="@color/white" />

                    <TextView
                        style="@style/label_header2"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:width="0dp"
                        android:gravity="center_horizontal"
                        android:padding="10dp"
                        android:text="@string/a"
                        android:textColor="@color/white" />

                    <TextView
                        style="@style/label_header2"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:width="0dp"
                        android:gravity="center_horizontal"
                        android:padding="10dp"
                        android:text="@string/b"
                        android:textColor="@color/white" />

                    <TextView
                        style="@style/label_header2"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:width="0dp"
                        android:gravity="center_horizontal"
                        android:padding="10dp"
                        android:text="@string/c"
                        android:textColor="@color/white" />

                    <TextView
                        style="@style/label_header2"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:width="0dp"
                        android:gravity="center_horizontal"
                        android:padding="10dp"
                        android:text="@string/d"
                        android:textColor="@color/white" />

                    <TextView
                        style="@style/label_header2"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:width="0dp"
                        android:gravity="center_horizontal"
                        android:padding="10dp"
                        android:text="@string/m"
                        android:textColor="@color/white" />
                </TableRow>
            </TableLayout>


            <TextView
                android:id="@+id/get_degree_of_belonging_label"
                style="@style/label_header2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/get_degree_of_belonging"
                android:textAlignment="center"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/table"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/x_text"
                style="@style/label_header2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/x"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@id/x_edit"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/get_degree_of_belonging_label"
                tools:visibility="visible" />

            <EditText
                android:id="@+id/x_edit"
                style="@style/label_default"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:visibility="gone"
                app:layout_constraintBaseline_toBaselineOf="@id/x_text"
                app:layout_constraintEnd_toStartOf="@id/get_degree_of_belonging_btn"
                app:layout_constraintStart_toEndOf="@id/x_text"
                tools:visibility="visible" />

            <ImageButton
                android:id="@+id/get_degree_of_belonging_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:backgroundTint="@color/green_200"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/x_edit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/x_edit"
                app:srcCompat="@drawable/ic_baseline_check_24"
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_fuzzy_set_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/outer_margin"
        android:backgroundTint="@color/green_200"
        android:contentDescription="@string/fab_content_desc"
        app:layout_constraintBottom_toTopOf="@id/reset_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_add_24" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/reset_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/outer_margin"
        android:contentDescription="@string/fab_content_desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_clear_24" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>